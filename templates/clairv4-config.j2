introspection_addr: :8089
http_listen_addr: :8080
log_level: debug
indexer:
  connstring: host={{ postgresql_hostname }} port=5432 dbname=clair user={{ postgresql_user }} password={{ postgresql_password }} sslmode=disable
  scanlock_retry: 10
  layer_scan_concurrency: 5
  migrations: true
matcher:
  connstring: host={{ postgresql_hostname }} port=5432 dbname=clair user={{ postgresql_user }} password={{ postgresql_password }} sslmode=disable
  max_conn_pool: 100
  run: ""
  migrations: true
  indexer_addr: clair-indexer
notifier:
  connstring: host={{ postgresql_hostname }} port=5432 dbname=clair user={{ postgresql_user }} password={{ postgresql_password }} sslmode=disable
  delivery_interval: 1m
  poll_interval: 5m
  migrations: true

